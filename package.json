{
	"name": "search-plusplus",
	"description": "A fast, indexed full text search VSCode extension, with optional intellisense",
	"version": "0.0.4",
	"icon": "img/logo.png",
	"publisher": "phil294",
	"private": false,
	"license": "GPL-3.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/phil294/search++-vscode-extension"
	},
	"engines": {
		"vscode": "^1.104.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished",
		"TODO"
	],
	"main": "./main.js",
	"contributes": {
		"commands": [
			{
				"command": "search++.search",
				"title": "Search",
				"category": "Search++",
				"icon": "$(search-fuzzy)"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "search-plusplus",
					"title": "Search++",
					"icon": "$(search-fuzzy)"
				}
			]
		},
		"views": {
			"search-plusplus": [
				{
					"type": "webview",
					"id": "search++",
					"name": "Search++"
				}
			]
		},
		"configuration": {
			"title": "Search++",
			"properties": {
				"search++.doNotUse": {
					"description": "This setting has no effect.",
					"type": "string",
					"default": "editor",
					"enum": [
						"editor",
						"view"
					],
					"enumDescriptions": [
						"bing",
						"bong"
					]
				}
			}
		}
	},
	"scripts": {
		"type-check": "tsc --noEmit",
		"lint": "eslint . --report-unused-disable-directives --max-warnings 0"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.39.1",
		"@types/micromatch": "^4.0.10",
		"@types/node": "^24.10.0",
		"@types/vscode": "1.104.0",
		"esbuild": "^0.25.12",
		"eslint": "^9.39.1",
		"eslint-plugin-n": "^17.23.1",
		"eslint-plugin-promise": "^7.2.1",
		"globals": "^16.5.0",
		"neostandard": "^0.12.2",
		"npm-check-updates": "^19.1.2",
		"ovsx": "^0.10.6",
		"vsce": "^2.15.0"
	},
	"dependencies": {
		"@vscode-elements/elements-lite": "^0.4.0",
		"@vscode/codicons": "^0.0.41",
		"@vscode/dts": "^0.4.1",
		"micromatch": "^4.0.8",
		"node-sqlite3-wasm": "^0.8.51",
		"vue": "^3.5.24"
	}
}
